{
  "name": "discord-sound-bot",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "app": "electron main.js",
    "build": "parcel build --public-url `pwd`/dist/ client/index.html",
    "dev:client": "parcel serve client/index.html",
    "dev:server": "nodemon server.mjs",
    "lint": "eslint client/**/*.js server.mjs",
    "serve": "node server.mjs",
    "start": "concurrently 'npm:serve' 'npm:app'",
    "test": "npm run lint"
  },
  "devDependencies": {
    "@discordjs/voice": "^0.6.0",
    "dotenv": "^10.0.0",
    "nodemon": "^2.0.12",
    "parcel-bundler": "^1.9.4",
    "standard": "^16.0.3"
  },
  "dependencies": {
    "@discordjs/opus": "^0.6.0",
    "bufferutil": "^4.0.3",
    "concurrently": "^6.2.1",
    "discord.js": "^13.1.0",
    "electron": "^13.2.3",
    "sodium": "^3.0.2",
    "ws": "^8.2.0"
  }
}
